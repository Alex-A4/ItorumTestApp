<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/people_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/people_gender_icon"
        android:src="@drawable/ic_men"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/people_gender"
        app:layout_constraintRight_toRightOf="@id/people_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/people_gender"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toBottomOf="@id/people_gender_icon"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="0dp" />

    <TextView
        android:id="@+id/people_birth"
        app:layout_constraintTop_toBottomOf="@id/people_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/people_birth"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
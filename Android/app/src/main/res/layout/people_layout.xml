<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/people_name"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/people_gender_icon"
        android:src="@drawable/ic_men"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/people_gender"
        app:layout_constraintRight_toRightOf="@id/people_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/people_gender"
        android:layout_marginEnd="5dp"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/people_gender_icon"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="0dp" />

    <TextView
        android:id="@+id/people_birth"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/people_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ImageView
        android:id="@+id/people_eye_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:src="@drawable/ic_eye"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/people_birth" />

    <TextView
        android:id="@+id/people_eye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/people_eye_icon"
        app:layout_constraintTop_toTopOf="@id/people_eye_icon" />

    <ImageView
        android:id="@+id/people_weight_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:src="@drawable/ic_weight"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/people_eye_icon" />

    <TextView
        android:id="@+id/people_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/people_weight_icon"
        app:layout_constraintTop_toTopOf="@id/people_weight_icon" />

    <ImageView
        android:id="@+id/people_height_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:src="@drawable/ic_height"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/people_weight_icon" />

    <TextView
        android:id="@+id/people_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/people_height_icon"
        app:layout_constraintTop_toTopOf="@id/people_height_icon" />

    <ImageView
        android:id="@+id/people_hair_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:src="@drawable/ic_hairstyle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/people_height_icon" />

    <TextView
        android:id="@+id/people_hair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/people_hair_icon"
        app:layout_constraintTop_toTopOf="@id/people_hair_icon" />

    <ImageView
        android:id="@+id/people_skin_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:src="@drawable/ic_skin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/people_hair_icon" />

    <TextView
        android:id="@+id/people_skin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/people_skin_icon"
        app:layout_constraintTop_toTopOf="@id/people_skin_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>